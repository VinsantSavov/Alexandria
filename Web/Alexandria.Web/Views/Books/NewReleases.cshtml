@using Alexandria.Web.ViewModels.Books
@model BooksAllViewModel

<section class="product-sec">
    <div class="container">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-md-8">
                <h2 class="text-md-left">New Released Books</h2>
                <hr />
                <ul class="list-unstyled">
                    @foreach (var book in Model.Books)
                    {
                        <li class="media my-5">
                            <img class="mr-3 w-25" src="@book.PictureURL" alt="Generic placeholder image">
                            <div class="media-body">
                                <h5 class="mt-0 mb-1">@book.Title</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p>
                                            Genres:
                                            @foreach (var genre in book.Genres)
                                            {
                                                <a asp-controller="Genres" asp-action="Details" asp-route-id="@genre.GenreId" class="text-dark font-italic">@genre.Name</a>
                                            }
                                        </p>
                                        <p>
                                            Tags:
                                            @string.Join(", ", book.Tags.Select(t => t.Name))
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <p>Avg.Rating: @book.AverageRating</p>
                                        <p>Reviews: @book.ReviewsCount</p>
                                    </div>
                                </div>
                                <p>
                                    @book.ShortSummary
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="text-warning font-italic">Read More</a>
                                </p>
                            </div>
                        </li>
                    }
                </ul>
                <nav>
                    <ul class="pagination">

                        @if (Model.CurrentPage == 1)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Previous</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-controller="Books"
                                   asp-action="NewReleases"
                                   asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.PagesCount; i++)
                        {
                            var active = i == Model.CurrentPage ? "active" : string.Empty;

                            <li class="page-item @active">
                                <a class="page-link"
                                   asp-controller="Books"
                                   asp-action="NewReleases"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage == Model.PagesCount)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-controller="Books"
                                   asp-action="NewReleases"
                                   asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>