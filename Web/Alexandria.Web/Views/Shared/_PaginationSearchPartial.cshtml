@using Alexandria.Web.ViewModels.Books
@model BooksSearchViewModel

<nav>
    <ul class="pagination">

        @if (!Model.HasPreviousPage)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="@Model.ControllerName"
                   asp-action="@Model.ActionName"
                   asp-route-search="@Model.SearchString"
                   asp-route-page="@(Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>
        }

        @for (int i = Model.CurrentPage - 3; i < Model.CurrentPage; i++)
        {
            if (i > 0)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="@Model.ControllerName"
                       asp-action="@Model.ActionName"
                       asp-route-search="@Model.SearchString"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }
        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.CurrentPage
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.CurrentPage + 1; i <= Model.CurrentPage + 3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="@Model.ControllerName"
                       asp-action="@Model.ActionName"
                       asp-route-search="@Model.SearchString"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }
        }
        @if (!Model.HasNextPage)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="@Model.ControllerName"
                   asp-action="@Model.ActionName"
                   asp-route-search="@Model.SearchString"
                   asp-route-page="@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        }
    </ul>
</nav>