@using Alexandria.Web.ViewModels.Genres
@model IEnumerable<GenresRandomViewModel>

<h6>Genres</h6>
<hr />
<dl class="row">
    @foreach (var genre in Model)
    {
        <dt class="col-sm-9" style="font-size: 13px">
            <a class="text-dark"
               asp-controller="Genres"
               asp-action="Details"
               asp-route-id="@genre.Id">
                @genre.Name
            </a>
        </dt>
        <dd class="col-md-2" style="font-size: 13px">
            @genre.BooksCount
        </dd>
    }
</dl>

