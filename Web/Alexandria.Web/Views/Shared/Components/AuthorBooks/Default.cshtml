@using Alexandria.Web.ViewModels.Books
@model IEnumerable<BooksAuthorBooksViewModel>

<h6 class="mb-2">Author's Top Rated books</h6>
    <section class="recomended-sec">
        <div class="form-inline">
            @foreach (var book in Model)
            {
                <div class="item" style="height: 150px; width: 80px;">
                    <img src="@book.PictureUrl" alt="cover">
                    <div class="hover">
                        <a asp-controller="Books"
                           asp-action="Details"
                           asp-route-id="@book.Id">
                            <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </section>
