@using Alexandria.Web.ViewModels.Administration.Genres
@model GenresDeleteViewModel

@{
    ViewData["Title"] = "Delete Genre";
}

<div class="container">
    <div class="row">
        <div>
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
                <dt class="col-sm-2">
                    Description
                </dt>
                <dd class="col-sm-10">
                    @Model.Description
                </dd>
                <dt class="col-sm-2">
                    Created On
                </dt>
                <dd class="col-sm-10">
                    @Model.CreatedOn
                </dd>
                <dt class="col-sm-2">
                    Modified On
                </dt>
                <dd class="col-sm-10">
                    @Model.ModifiedOn
                </dd>
            </dl>
            <form method="post"
                  class="mb-3"
                  asp-area="Administration"
                  asp-controller="Genres"
                  asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />

                <button class="btn black"
                        asp-area="Administration"
                        asp-controller="Genres"
                        asp-action="Index">
                    Back to List
                </button>
            </form>
        </div>
    </div>
</div>
