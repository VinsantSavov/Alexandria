@using Alexandria.Web.ViewModels.Administration.Genres
@model GenresCreateInputModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div  class="col-md-12">
            <h4>Create genre</h4>
            <hr />

            <form method="post"
                  asp-area="Administration"
                  asp-controller="Genres"
                  asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="The description should be as expressive as possible"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <form class="mt-1 mb-3">
            <button class="btn black"
                    asp-area="Administration"
                    asp-controller="Genres"
                    asp-action="Index">
                Back to list
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
