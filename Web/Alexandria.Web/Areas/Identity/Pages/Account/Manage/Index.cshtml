@page
@using Alexandria.Data.Models.Enums
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="mb-2">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ProfilePicture" alt="Picture" 
                     class="rounded-circle d-block mb-2"
                     style="width: 200px; height: 150px;"/>
            </div>
        </div>
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input asp-for="Input.ProfilePicture" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <select asp-for="Input.Gender" asp-items="@Html.GetEnumSelectList(typeof(GenderType))" class="form-control"></select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Biography"></label>
                <textarea asp-for="Input.Biography" rows="4" class="form-control" placeholder="About me"></textarea>
                <span asp-validation-for="Input.Biography" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}