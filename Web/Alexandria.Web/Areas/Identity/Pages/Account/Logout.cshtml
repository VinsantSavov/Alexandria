@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<section class="static about-sec">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 float-left">
                <header class="text-center">
                    <h1>@ViewData["Title"]</h1>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <h5 class="my-5">Are you sure you want to leave?</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <form class="justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Identity/Account/Login" method="post">
                                        <button type="submit" class="nav-link btn btn-link">Click here to Logout</button>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p>You have successfully logged out of the application.</p>
                        }
                    }
                </header>
            </div>
        </div>
    </div>
</section>